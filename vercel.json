{
    "version": 2,
    "builds": [
        {
            "src": "jobsy/vercel.app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12"
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "jobsy/vercel.app.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "jobsy.vercel_settings",
        "PYTHONPATH": ".",
        "PIP_TARGET": "${LAMBDA_TASK_ROOT}"
    }
}